general {
        colors = true
        interval = 5
        output_format = none
}

order += "volume master"
order += "tztime local"
order += "time"
order += "battery 0"

volume master {
    format = " VOL %volume "
    format_muted = " muted "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = " %A %Y-%m-%d "
}

time {
    format = " %H:%M "
}

battery 0 {
        format = " ï‡¦ %status %percentage %remaining "
	integer_battery_capacity = true
}
